<div class="h-100 p-5 bg-body-tertiary border rounded-3">
  <h2><%= @member.first_name %> <%= @member.last_name %></h2>
  <p><%= @member.email %> | <%= @member.phone_number %></p>
  <%= link_to "Edit this member", edit_member_path(@member), class:"btn btn-secondary" %>
  <%= link_to "Back to members", members_path, class:"btn btn-dark" %>
  <%= button_to "Destroy this member", @member, method: :delete, class: "btn btn-danger" %>
</div>
