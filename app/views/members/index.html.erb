<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th>Height</th>
      <th>Weight</th>
      <th colspan="3"></th> <!-- colspan="3" to accommodate edit, show, and destroy links -->
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.first_name %></td>
        <td><%= member.last_name %></td>
        <td><%= member.email %></td>
        <td><%= member.phone_number %></td>
        <td><%= member.height %></td>
        <td><%= member.weight %></td>
        <td><%= link_to "Show", member %></td>
        <td><%= link_to "Edit", edit_member_path(member) %></td>
        <td><%= link_to "Destroy", member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New member", new_member_path, class: "btn btn-success" %>
